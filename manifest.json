{
  "manifest_version": 2,

  "name": "Download manager",
  "description": "This extension creates a way to time downloads.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },
   "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "alarms" ,
   "downloads"
  ]
}
